<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    >

    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/layout_alarm_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/ranking_user_item_number"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:text="1"
            android:textSize="50sp"
            android:textAlignment="center"
            ></TextView>

        <ImageView
            android:id="@+id/ranking_user_item_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:background="@null"
            android:src="@drawable/profile_human"
            ></ImageView>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ranking_user_item_nickname"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="evn.ha"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:id="@+id/ranking_user_item_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:text="추천수"
                    android:inputType="textMultiLine"
                    android:layout_weight="0.1"/>


                <TextView
                    android:id="@+id/ranking_user_item_recommendnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:text="2"
                    android:layout_weight="0.2"/>

                <TextView
                    android:id="@+id/ranking_user_item_commend"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:text="댓글"
                    android:layout_weight="0.1"/>

                <TextView
                    android:id="@+id/ranking_user_item_commendnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:text="700"
                    android:layout_weight="0.2"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>