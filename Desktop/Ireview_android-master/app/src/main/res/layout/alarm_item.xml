<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
   >

    <LinearLayout
        android:id="@+id/layout_alarm_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/alarm_image_profile"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:background="@null"
            android:src="@drawable/profile_human"></ImageView>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alarm_item_id"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="id 자리"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/alarm_item_goodtext"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="님이 회원님의 게시물을 좋아합니다."
                android:inputType="textMultiLine"/>
                <!--android:maxLines="5"-->

            <TextView
                android:id="@+id/alarm_item_time"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="시간 자리"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/alarm_image_post"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:background="@null"
            android:src="@drawable/tap_icon_daily"
            ></ImageView>

    </LinearLayout>


</LinearLayout>