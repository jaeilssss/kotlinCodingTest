<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    //일단 로그인 화면을 여기에 넣어둔다
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/review_ui"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Mypage"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="25dp" />
        <!--<TextView
            android:id="@+id/text_mypage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/my_image"
                    android:background="@null"
                    android:src="@drawable/profile_human"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/my_nickname"
                            android:text="닉네임"
                            android:textSize="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/mypage_modify_page"
                            android:text="정보 수정 "
                            android:textSize="20dp"
                            android:background="@drawable/edge"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/my_rangking"
                            android:text="Dia"
                            android:textSize="20dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/rangking_questio"
                            android:background="#ffff00"
                            android:layout_marginLeft="15dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="내 리뷰"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_width="75dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/my_review_number"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:textColor="#FF0000"
                    android:text="1"
                    android:textSize="25dp" />

                <TextView
                    android:text="내 댓글"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_width="75dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/reply_number"
                    android:textColor="#FF0000"
                    android:text="9"
                    android:textSize="25dp"
                    android:layout_width="60dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:text="스크랩"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_width="75dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:id="@+id/scrab_number"
                    android:textColor="#FF0000"
                    android:text="100"
                    android:textSize="25dp"
                    android:layout_width="60dp"
                    android:layout_height="50dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--<TextView
                    android:id="@+id/latest_review"
                    android:text="최근에 본 리뷰"
                    android:textSize="30dp"
                    android:background="@drawable/edge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>-->

                <!--android:background="@drawable/edge"-->

                <TextView
                    android:id="@+id/recommendated_review"
                    android:text="내가 추천한 리뷰"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

                <TextView
                    android:id="@+id/mypage_option_button"
                    android:text="설정"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

                <TextView
                    android:id="@+id/mypage_service_center_button"
                    android:text="고객센터"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

                <TextView
                    android:id="@+id/mypage_version_info_button"
                    android:text="버전정보"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

                <!--<TextView
                    android:id="@+id/mypage_modify_password_page"
                    android:text="비밀번호 변경 없애야 하는데 오류 뜸"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>-->

                <TextView
                    android:id="@+id/mypage_logout_button"
                    android:text="로그아웃"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>