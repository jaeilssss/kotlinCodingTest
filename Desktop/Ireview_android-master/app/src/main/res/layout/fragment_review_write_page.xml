<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:background="#ffffff"
            android:id="@+id/text_review_write"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:textAlignment="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/review_ui"
                android:text="review_ui"
                android:textSize="30dp"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <Spinner
                android:id="@+id/Spinner_review_write_category"
                android:entries="@array/spinner_array_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="제목 :"
                        android:textSize="20dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="제목을 입력하세요"
                        android:id="@+id/notice_write_title"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/notice_write_content"/>
            </LinearLayout>


            <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장점"
        android:textSize="23dp"
        />
                <EditText
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/advantage_point"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단점"
                android:textSize="23dp"
                />
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:id="@+id/weakness_point"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/review_image_insert"
                    android:layout_width="12dp"
                    android:layout_height="34dp"
                    android:src="@drawable/upload_bt" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="이미지는 최대 8까지 첨부 가능합니다"/>
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/imageview_layout"
    >
<!--    여기는 이미지 첨부 시 보여주는 공간 -->

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageview"/>

</LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="완료"
                android:id="@+id/write_submit"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나가기"
                android:id="@+id/write_exit"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>