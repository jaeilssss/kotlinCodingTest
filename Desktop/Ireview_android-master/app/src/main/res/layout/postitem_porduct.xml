<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <LinearLayout
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <ImageView
         android:id="@+id/postitem_product_image"
         android:background="#ff00ff"
         android:layout_width="150dp"
         android:layout_height="150dp"/>

     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:text="제품 이름"
             android:textSize="30dp"
             android:id="@+id/postitem_product_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

         <TextView
             android:text="카테고리"
             android:textSize="30dp"
             android:id="@+id/postitem_product_category"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

         <TextView
             android:text="카테고리"
             android:textSize="30dp"
             android:id="@+id/postitem_product_writer"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
     </LinearLayout>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="제품 설명 100자 정도?"
            android:textSize="30dp"
            android:id="@+id/postitem_product_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</LinearLayout>