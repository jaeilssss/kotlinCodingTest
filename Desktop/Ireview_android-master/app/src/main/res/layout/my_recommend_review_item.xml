<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
   >

    <LinearLayout
        android:id="@+id/layout_recommend_review_item"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:hint="Email"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_recommend_review_title"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="게시글 제목"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="1.2">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="닉네임"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/layout_recommend_review_nickname"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="닉네임"
                    android:textColor="#eb88a0"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="날짜"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/layout_recommend_review_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="2020.4.8"
                    android:textColor="#eb88a0"
                    android:textSize="15sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="1.2">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="조회수"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:id="@+id/layout_recommend_review_seecount"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="조회수"
                    android:textColor="#eb88a0"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="추천"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:id="@+id/layout_recommend_review_recommendcount"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="추천"
                    android:textColor="#eb88a0"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="스크랩"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:id="@+id/layout_recommend_review_scrap"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textColor="#eb88a0"
                    android:text="스크랩"
                    android:textSize="15sp"></TextView>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"></ImageView>

    </LinearLayout>


</LinearLayout>