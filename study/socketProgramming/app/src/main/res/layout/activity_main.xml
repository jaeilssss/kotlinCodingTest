<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:textAllCaps="false"
        android:id="@+id/Ip"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipButton"
        app:layout_constraintStart_toEndOf="@id/Ip"
        app:layout_constraintTop_toTopOf="@id/Ip"
        android:text="ip"/>
<EditText
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@id/Ip"
    app:layout_constraintEnd_toEndOf="@id/Ip"
    app:layout_constraintTop_toBottomOf="@id/Ip"
    android:layout_marginTop="30dp"
    android:id="@+id/content"
    android:textAllCaps="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contentButton"
        android:text="send"
        app:layout_constraintStart_toEndOf="@id/content"
        app:layout_constraintTop_toTopOf="@id/content"
        app:layout_constraintBottom_toBottomOf="@id/content"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/content"
    android:id="@+id/chatView"/>

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatView"
        android:id="@+id/r1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/r1"
        app:layout_constraintTop_toTopOf="@id/r1"
        app:layout_constraintBottom_toBottomOf="@id/r1"
        android:id="@+id/r1Send"
        android:text="반복전송"
        />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/r1"
        android:layout_marginTop="20dp"
        android:id="@+id/r2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/r2"
        app:layout_constraintTop_toTopOf="@id/r2"
        app:layout_constraintBottom_toBottomOf="@id/r2"
        android:text="r2전송"
        android:id="@+id/r2Send"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:id="@+id/txt"/>
</androidx.constraintlayout.widget.ConstraintLayout>
